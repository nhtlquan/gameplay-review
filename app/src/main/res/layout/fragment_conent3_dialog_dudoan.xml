<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/conent_dudoan3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:visibility="gone" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e3e3e3"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/padding10"
        android:paddingLeft="@dimen/padding35"
        android:paddingRight="@dimen/padding35" >

        <TextView
            android:id="@+id/tv_question2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding5"
            android:ellipsize="marquee"
            android:maxLines="2"
            android:text="@string/message_betting"
            android:textColor="@color/color_title_game"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/btn_signin"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding5"
            android:layout_weight="1"
            android:background="@drawable/background_button_more"
            android:gravity="center"
            android:text="@string/signin"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>